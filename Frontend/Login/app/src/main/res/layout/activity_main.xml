<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="106dp"
        android:layout_marginLeft="106dp"
        android:layout_marginTop="1dp"
        android:background="#F44336"
        app:srcCompat="@drawable/wixsample" />

    <EditText
        android:id="@+id/Username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="261dp"
        android:drawableLeft="@drawable/ic_action_usernamewhite"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Username"
        android:textColor="@color/colorWhite"
        android:textSize="25dp"
        android:textStyle="normal|bold" />

    <EditText
        android:id="@+id/Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="208dp"
        android:drawableLeft="@drawable/ic_action_passwordwhite"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Password"
        android:textColor="@color/colorWhite"
        android:textSize="25dp"
        android:textStyle="normal|bold" />

    <Button
        android:id="@+id/LOGIN"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="87dp"
        android:background="@color/colorPrimaryDark"
        android:text="SIGN IN"
        android:textColor="#FDFDFC"
        android:textColorHighlight="#00E40505"
        android:textSize="25dp"
        android:textStyle="normal|bold|italic" />

    <Button
        android:id="@+id/Register"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="29dp"
        android:background="#FFFFFF"
        android:shadowColor="#00000000"
        android:text="Regsiter Now"
        android:textColor="#009688"
        android:textStyle="normal|bold|italic" />

    <TextView
        android:id="@+id/LoginPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="147dp"
        android:layout_marginEnd="157dp"
        android:layout_marginRight="157dp"
        android:text="Login"
        android:textColor="@color/colorWhite"
        android:textSize="40dp"
        android:textStyle="bold" />

</RelativeLayout>